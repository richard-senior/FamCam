<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Max images per period -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Max Images Per Period"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/etMaxImages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="50"
            android:layout_marginBottom="16dp" />

        <!-- Period hours -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Period (Hours)"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/etPeriodHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="8"
            android:layout_marginBottom="16dp" />

        <!-- Confidence threshold -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confidence Threshold (%)"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/etConfidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="70"
            android:layout_marginBottom="16dp" />

        <!-- Frame rate -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Processing Frame Rate (FPS)"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/etFrameRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="3"
            android:layout_marginBottom="16dp" />

        <!-- Save path -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Directory (relative to DCIM)"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/etSavePath"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="FamCam"
            android:layout_marginBottom="16dp" />

        <!-- Classes -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classes (comma-separated)"
            android:textSize="16sp" />
        <EditText
            android:id="@+id/etClasses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="person,cat,dog"
            android:layout_marginBottom="24dp" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
